# LLM Configuration
LLM_PROVIDER=google  # 'google' or 'openai'

# Google Gemini API (Required if using Google's LLM)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API (Required if using OpenAI's LLM)
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # 'chroma' or other supported vector DB
VECTOR_DB_PATH=./data/vector_db

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Web Search API (Optional)
# SEARCH_API_KEY=your_search_api_key_here
# SEARCH_ENGINE_ID=your_search_engine_id_here

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
